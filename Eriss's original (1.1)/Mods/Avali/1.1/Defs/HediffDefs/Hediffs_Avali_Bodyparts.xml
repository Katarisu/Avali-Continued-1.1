<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- CyberneticAvaliTail -->
<HediffDef ParentName="AddedBodyPartBase">
	<defName>CyberneticAvaliTail</defName>
	<label>cybernetic Avali tail</label>
  <labelNoun>a cybernetic Avali tail</labelNoun>
  <description>A technological marvel! Intricate gyroscopic feedback systems allow increased movement and dexterity! Amazing! Such Wow!</description>
	<spawnThingOnRemoved>CyberneticAvaliTail</spawnThingOnRemoved>
	<addedPartProps>
		<solid>true</solid>
		<partEfficiency>1.0</partEfficiency>
	</addedPartProps>
	<stages>
		<li>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.25</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>0.25</offset>
				</li>
			</capMods>
		</li>
	</stages>
</HediffDef>

<!-- CyberneticAvaliBody -->
<HediffDef ParentName="ImplantHediffBase">
	<defName>CyberneticAvaliBody</defName>
	<label>cybernetic Avali torso</label>
  <labelNoun>a cybernetic Avali torso</labelNoun>
  <description>Avali body made of plasteel and stuffed with most advanced electronics. Because flesh is weak.</description>
  <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
	<stages>
		<li>
			<capMods>
				<li>
					<capacity>Breathing</capacity>
					<offset>0.5</offset>
				</li>
				<li>
					<capacity>BloodFiltration</capacity>
					<offset>0.5</offset>
				</li>
        <li>
					<capacity>BloodPumping</capacity>
					<offset>0.5</offset>
				</li>
        <li>
					<capacity>Metabolism</capacity>
					<offset>0.5</offset>
				</li>
			</capMods>
      <statOffsets>
        <MaxHitPoints>60</MaxHitPoints>
        <PainShockThreshold>0.6</PainShockThreshold>
        <ArmorRating_Enviromental>0.8</ArmorRating_Enviromental>
        <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
        <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
        <ArmorRating_Heat>0.5</ArmorRating_Heat>
        <ComfyTemperatureMin>-30</ComfyTemperatureMin>
        <ComfyTemperatureMax>30</ComfyTemperatureMax>
        <Flammability>0.4</Flammability>
      </statOffsets>
      <painFactor>0</painFactor>
		</li>
	</stages>
</HediffDef>

<!-- CyberneticAvaliHead -->
<HediffDef ParentName="ImplantHediffBase">
	<defName>CyberneticAvaliHead</defName>
	<label>cybernetic Avali head</label>
  <labelNoun>a cybernetic Avali head</labelNoun>
  <description>A Avali brains in a head made of plasteel and stuffed with most advanced electronics. Also makes them immune to mental illness called Pack Loss.</description>
  <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
  <comps>
    <li Class="HediffCompProperties_VerbGiver">
      <tools>
        <li>
          <label>teeth</label>
          <capacities>
            <li>Bite</li>
          </capacities>
          <power>20</power>
          <cooldownTime>1.5</cooldownTime>
        </li>
      </tools>
    </li>
  </comps>
	<stages>
		<li>
      <capMods>
				<li>
					<capacity>Consciousness</capacity>
					<offset>0.5</offset>
				</li>
        <li>
					<capacity>Eating</capacity>
					<offset>0.5</offset>
				</li>
			</capMods>
      <statOffsets>
        <MaxHitPoints>40</MaxHitPoints>
        <PainShockThreshold>1</PainShockThreshold>
        <PsychicSensitivity>-1</PsychicSensitivity>
        <ArmorRating_Enviromental>0.2</ArmorRating_Enviromental>
        <ComfyTemperatureMin>-20</ComfyTemperatureMin>
        <ComfyTemperatureMax>20</ComfyTemperatureMax>
      </statOffsets>
      <painFactor>0</painFactor>
		</li>
	</stages>
</HediffDef>

<!-- CyberneticAvaliLeg -->
<HediffDef ParentName="AddedBodyPartBase">
	<defName>CyberneticAvaliLeg</defName>
	<label>cybernetic Avali leg</label>
  <labelNoun>a cybernetic Avali leg</labelNoun>
  <description>With this legs Avali can run faster and jump highter then ever before.</description>
  <comps>
    <li Class="HediffCompProperties_VerbGiver">
      <tools>
        <li>
          <label>leg</label>
          <capacities>
            <li>Blunt</li>
          </capacities>
          <power>9</power>
          <cooldownTime>3</cooldownTime>
        </li>
        <li>
          <label>leg talons</label>
          <capacities>
            <li>Scratch</li>
          </capacities>
          <power>12</power>
          <cooldownTime>3</cooldownTime>
        </li>
      </tools>
    </li>
  </comps>
	<spawnThingOnRemoved>CyberneticAvaliLeg</spawnThingOnRemoved>
	<addedPartProps>
		<solid>true</solid>
		<partEfficiency>1.4</partEfficiency>
	</addedPartProps>
</HediffDef>

